@model Gitgruppen.Models.ParkedVehicle

@{
    ViewData["Title"] = "Check out vehicle";
}

<h1>Check out vehicle</h1>

<h3>Are you sure you want to check out this vehicle?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrived)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arrived)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfWheels)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfWheels)
        </dd>
    </dl>
    
    <h4>Checkout without receipt </h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="LicensePlate" />
        <input type="submit" value="Check out" class="btn btn-danger" />
    </form>
    <br />
    <h4>Receipt at checkout </h4>
    <form asp-action="Receipt" asp-route-id="@Model?.LicensePlate">
        <input type="hidden" asp-for="LicensePlate" />
        <input type="submit" value="Receipt" class="btn btn-danger" />
    </form>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
</div>
