@model GitGruppen.Core.Receipt

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Receipt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeDeparture" class="control-label"></label>
                <input asp-for="TimeDeparture" class="form-control" />
                <span asp-validation-for="TimeDeparture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeArrival" class="control-label"></label>
                <input asp-for="TimeArrival" class="form-control" />
                <span asp-validation-for="TimeArrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCost" class="control-label"></label>
                <input asp-for="TotalCost" class="form-control" />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
